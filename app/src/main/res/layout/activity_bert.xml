        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/BERTcontact13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone" />
            <EditText
                android:id="@+id/BERTcontact14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"/>
        </TableRow>

        <TableRow>
            <EditText
                android:id="@+id/BERTcontact15"
                android:layout_width="0dp"
